{
  "name": "ai-code-assistant",
  "publisher": "publisher-name",
  "displayName": "AI Code Assistant",
  "description": "AI-powered code assistance with documentation generation, refactoring and explanation",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
        "title": "AI Code Assistant",
        "properties": {
            "aiCodeAssistant.debugMode": {
                "type": "boolean",
                "default": false,
                "description": "Enable debug logging for extension"
            },
            "aiCodeAssistant.defaultModel": {
                "type": "string",
                "default": "gpt-3.5-turbo",
                "description": "Default AI model for code processing"
            }
        }
    },
    "commands": [
      {
        "command": "ai-code-assistant.generateCodeDocumentation",
        "title": "Generate code documentation"
      },
      {
        "command": "ai-code-assistant.refactorCode",
        "title": "Refactor Code"
      },
      {
        "command": "ai-code-assistant.generateExplanation",
        "title": "Generate explanation"
      },
      {
        "command": "ai-code-assistant.generateCodeFromSignature",
        "title": "Generate code from signature"
      },
      {
        "command": "ai-code-assistant.generateTests",
        "title": "Generate tests"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ai-code-assistant.generateCodeDocumentation",
          "when": "editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "ai-code-assistant.refactorCode",
          "when": "editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "ai-code-assistant.generateExplanation",
          "when": "editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "ai-code-assistant.generateCodeFromSignature",
          "when": "editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "ai-code-assistant.generateTests",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "java-parser": "^2.3.3",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@babel/parser": "^7.23.0",
    "axios": "^1.8.2",
    "dotenv": "^16.4.7",
    "openai": "^4.85.4",
    "tiktoken": "^1.0.20",
    "tree-sitter": "^0.22.4",
    "tree-sitter-java": "^0.23.5",
    "tree-sitter-python": "^0.23.6"
  }
}
